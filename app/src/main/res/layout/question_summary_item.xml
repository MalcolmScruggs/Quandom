<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/summaryQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingTop="12dp"
        android:text="This is the question"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/summaryAnswerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/summary_answer"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="@dimen/player_selection_text_size" />

    <TextView
        android:id="@+id/summaryCorrectGuesserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/summary_correct_players"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingBottom="12dp"/>


</LinearLayout>