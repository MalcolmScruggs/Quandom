<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/summaryQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingTop="12dp"
        android:text="This is the question"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/summaryAnswerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/summary_answer"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/summaryCorrectGuesserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/summary_correct_players"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:textColor="@color/textGreen"/>


</LinearLayout>